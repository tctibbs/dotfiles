# Files to ignore from chezmoi management
# Syntax: https://www.chezmoi.io/reference/special-files-and-directories/chezmoiignore/

# Repository files (not dotfiles)
README.md
LICENSE
CLAUDE.md
.gitignore
assets/
docs/

# Git files (managed by chezmoi, not synced)
.git/
.claude/

# OS-specific ignores
{{ if ne .chezmoi.os "darwin" }}
# Skip macOS-specific files on non-macOS
.tmux.mac.conf
{{ end }}

{{ if ne .chezmoi.os "linux" }}
# Skip Linux-specific files on non-Linux
.tmux.linux.conf
# VSCode settings path differs on non-Linux
.config/Code/
{{ end }}

{{ if ne .chezmoi.os "windows" }}
# Skip Windows-specific files on non-Windows
Documents/
AppData/
install-packages-windows.ps1
{{ end }}

{{ if eq .chezmoi.os "windows" }}
# Skip Unix-specific files on Windows
install-packages.sh
setup-tmux.sh
.tmux.conf
.tmux.mac.conf
.tmux.linux.conf
{{ end }}

# Container environments: skip heavy installs
{{ if .isContainer }}
install-packages.sh
install-packages-windows.ps1
setup-tmux.sh
.tmux.conf
.tmux.mac.conf
.tmux.linux.conf
{{ end }}

# WSL: skip macOS-specific but keep CLI tools
{{ if .isWSL }}
.tmux.mac.conf
{{ end }}

# Profile-based ignores
{{ if eq .profile "minimal" }}
# Minimal profile: skip most extras
install-packages.sh
install-packages-windows.ps1
setup-tmux.sh
{{ end }}
